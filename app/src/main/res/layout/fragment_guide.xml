<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/guide_full"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/red">
    <ImageView android:id="@+id/guide_img"
               android:layout_width="300dp"
               android:layout_height="300dp"
               android:layout_centerHorizontal="true"
               android:layout_gravity="center_horizontal"
               android:scaleType="center"/>
    <TextView android:id="@+id/guide_txt"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/guide_img"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="30dp"
              android:textColor="@color/white"
              android:textSize="30sp"/>
    <Button
        android:id="@+id/guide_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@color/color_bg_guide2"
        android:text="@string/guide_tiyan"
        android:textColor="@color/white"
        android:textSize="15sp"
    android:visibility="gone"/>

</RelativeLayout>